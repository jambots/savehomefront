<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        xmlns:android = "http://schemas.android.com/apk/res/android"
        id        = "com.jambots.savehomefront"
        versionCode="2" 
        version   = "1.2">

    <!-- versionCode is optional and Android only -->
<preference name="phonegap-version" value="cli-6.5.0" />
    <name>S.A.V.E. HOME FRONT</name>
    <description>Selfless Service * Advocacy * Veteran * Emergency</description>
<gap:platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
     <variable name="CAMERA_USAGE_DESCRIPTION" value="App would like to access the camera." />
     <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="App would like to access the library." />
</gap:platform>

<gap:platform name="android" />
<gap:config-file platform="android" parent="/manifest/application">
    <activity android:launchMode="singleInstance" />
</gap:config-file>
<preference name="fullscreen" value="true" />
<preference name="orientation" value="portrait" />
<gap:splash src="res/splash.png" />
<access origin="*" />
<allow-navigation href="https://www.jambots.com" />
<icon src="res/icon.png" />

<preference name="StatusBarOverlaysWebView" value="true" />
<gap:config-file platform="ios" parent="UIStatusBarHidden">
    <true/>
</gap:config-file>
<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
    <false/>
</gap:config-file>

<gap:plugin name="cordova-plugin-flashlight" source="npm" />
<gap:config-file platform="android" parent="/manifest">
     <application android:debuggable="true" />
</gap:config-file>
</widget>